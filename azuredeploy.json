{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetworkName": {
      "type": "string"
    },
    "sqlServerName": {
      "type": "string"
    },
    "databaseName": {
      "type": "string"
    },
    "websiteName": {
      "type": "string"
    },
    "webAppHostingPlanName": {
      "type": "string"
    },
    "sqlServerAdminUsername": {
      "type": "string",
      "defaultValue": "adminuser"
    },
    "sqlServerAdminPassword": {
      "type": "securestring",
      "defaultValue": "adminuser"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "databaseSkuName": {
      "type": "string",
      "defaultValue": "Basic"
    },
    "databaseSkuTier": {
      "type": "string",
      "defaultValue": "Basic"
    },
    "webAppHostingPlanSku": {
      "type": "string",
      "defaultValue": "S1"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/privateDnsZones",
      "apiVersion": "2018-09-01",
      "name": "privatelink.database.windows.net",
      "location": "global",
      "properties": {
      },
      "resources": [
        {
          "type": "virtualNetworkLinks",
          "apiVersion": "2018-09-01",
          "name": "link-to-arinco-app-vnet",
          "location": "global",
          "dependsOn": [
            "[resourceId('Microsoft.Network/privateDnsZones', 'privatelink.database.windows.net')]",
            "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
          ],
          "properties": {
            "registrationEnabled": false,
            "virtualNetwork": {
              "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
            }
          }
        }
      ]
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2019-12-01",
      "name": "[parameters('virtualNetworkName')]",
      "location": "australiaeast",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "sql",
            "properties": {
              "addressPrefix": "10.0.0.0/24",
              "privateEndpointNetworkPolicies": "Disabled",
              "privateLinkServiceNetworkPolicies": "Enabled"
            }
          },
          {
            "name": "web",
            "properties": {
              "addressPrefix": "10.0.1.0/24",
              "delegations": [
                {
                  "name": "delegation",
                  "properties": {
                    "serviceName": "Microsoft.Web/serverfarms"
                  }
                }
              ]
            }
          }
        ]
      },
      "resources": [
        {
          "type": "subnets",
          "apiVersion": "2019-11-01",
          "name": "sql",
          "dependsOn": [
            "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
          ],
          "properties": {
            "addressPrefix": "10.0.0.0/24",
            "privateEndpointNetworkPolicies": "Disabled",
            "privateLinkServiceNetworkPolicies": "Enabled"
          }
        },
        {
          "type": "subnets",
          "apiVersion": "2019-11-01",
          "name": "web",
          "dependsOn": [
            "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
            "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), 'sql')]"
          ],
          "properties": {
            "addressPrefix": "10.0.1.0/24",
            "delegations": [
              {
                "name": "delegation",
                "properties": {
                  "serviceName": "Microsoft.Web/serverfarms"
                }
              }
            ]
          }
        }
      ]
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2019-06-01-preview",
      "name": "[parameters('sqlServerName')]",
      "location": "australiaeast",
      "kind": "v12.0",
      "properties": {
        "administratorLogin": "[parameters('sqlServerAdminUsername')]",
        "administratorLoginPassword": "[parameters('sqlServerAdminPassword')]",
        "version": "12.0",
        "publicNetworkAccess": "Disabled"
      },
      "resources": [
        {
          "type": "databases",
          "apiVersion": "2019-06-01-preview",
          "name": "[parameters('databaseName')]",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[parameters('sqlServerName')]"
          ],
          "sku": {
            "name": "[parameters('databaseSkuName')]",
            "tier": "[parameters('databaseSkuTier')]"
          }
        },
        {
          "type": "administrators",
          "apiVersion": "2019-06-01-preview",
          "name": "ActiveDirectory",
          "dependsOn": [
            "[parameters('sqlServerName')]",
            "[parameters('webSiteName')]"
          ],
          "properties": {
            "administratorType": "ActiveDirectory",
            "login": "[parameters('webSiteName')]",
            "sid": "[reference(resourceId('Microsoft.Web/sites', parameters('webSiteName')), '2018-11-01', 'Full').identity.principalId]"
          }
        }
      ]
    },
    {
      "apiVersion": "2016-09-01",
      "name": "[parameters('webAppHostingPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('webAppHostingPlanSku')]"
      },
      "properties": {
        "name": "[parameters('webAppHostingPlanName')]"
      }
    },
    {
      "apiVersion": "2018-11-01",
      "name": "[parameters('websiteName')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('webAppHostingPlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('webAppHostingPlanName'))]"
      },
      "identity": {
        "type": "SystemAssigned"
      },
      "resources": [
        {
          "type": "config",
          "name": "appsettings",
          "apiVersion": "2018-11-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('websiteName'))]"
          ],
          "properties": {
            "WEBSITE_DNS_SERVER": "168.63.129.16",
            "WEBSITE_VNET_ROUTE_ALL": "1"
          }
        },
        {
          "apiVersion": "2018-11-01",
          "type": "config",
          "name": "connectionstrings",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('websiteName'))]"
          ],
          "properties": {
            "DbContext": {
              "value": "[concat('Server=tcp:', parameters('sqlServerName'), '.database.windows.net,1433;Database=', parameters('databaseName'), '<database-name>;')]",
              "type": "SQLAzure"
            }
          }
        },
        {
          "name": "virtualNetwork",
          "type": "config",
          "apiVersion": "2018-02-01",
          "location": "[resourceGroup().location]",
          "properties": {
            "subnetResourceid": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), 'web')]",
            "swiftSupported": true
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('websiteName'))]",
            "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), 'web')]"
          ]
        }
      ]
    },
    {
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2019-12-01",
      "name": "[concat(parameters('sqlServerName'),'-pl')]",
      "location": "australiaeast",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), 'sql')]"
      ],
      "properties": {
        "privateLinkServiceConnections": [
          {
            "name": "[concat(parameters('sqlServerName'),'-pl')]",
            "properties": {
              "privateLinkServiceId": "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]",
              "groupIds": [
                "sqlServer"
              ],
              "privateLinkServiceConnectionState": {
                "status": "Approved",
                "description": "Auto-approved",
                "actionsRequired": "None"
              }
            }
          }
        ],
        "subnet": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), 'sql')]"
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "sql-endpoint-a-record",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateEndpoints', concat(parameters('sqlServerName'),'-pl'))]",
        "[resourceId('Microsoft.Network/privateDnsZones', 'privatelink.database.windows.net')]"
      ],
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "privateDnsName": {
              "type": "string"
            },
            "networkInterfaceResourceId": {
              "type": "string"
            },
            "aRecordName": {
              "type": "string"
            }
          },
          "resources": [
            {
              "type": "Microsoft.Network/privateDnsZones/A",
              "name": "[concat(parameters('privateDnsName'),'/', parameters('aRecordName'))]",
              "location": "global",
              "apiVersion": "2018-09-01",
              "properties": {
                "ttl": 3600,
                "aRecords": [
                  {
                    "ipv4Address": "[reference(parameters('networkInterfaceResourceId'), '2019-12-01').ipConfigurations[0].properties.privateIPAddress]"
                  }
                ]
              }
            }
          ]
        },
        "parameters": {
          "privateDnsName": {
            "value": "privatelink.database.windows.net"
          },
          "aRecordName": {
            "value": "[parameters('sqlServerName')]"
          },
          "networkInterfaceResourceId": {
            "value": "[reference(resourceId('Microsoft.Network/privateEndpoints', concat(parameters('sqlServerName'), '-pl'))).networkInterfaces[0].id]"
          }
        }
      }
    }
  ]
}
